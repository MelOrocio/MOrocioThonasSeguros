@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-users"></i> Lista de Usuarios</h2>
        <a href="@Url.Action("Form", "Usuario")" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>
    <hr />

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Message
        </div>
    }

    @if (Model != null && Model.Usuarios != null && Model.Usuarios.Count > 0)
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered" id="tablaUsuarios">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center" style="width: 15%;">ID Usuario</th>
                                <th style="width: 45%;">Nombre Completo</th>
                                <th style="width: 40%;">Hobby</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Usuario usuario in Model.Usuarios)
                            {
                                <tr>
                                    <td class="text-center">
                                        <span style="font-size: 14px; padding: 8px 12px;">
                                            @usuario.IdUsuario
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@usuario.NombreCompleto</strong>
                                    </td>
                                    <td>
                                        @if (string.IsNullOrEmpty(usuario.Hobby))
                                        {
                                            <span class="text-muted"><em>Sin hobby registrado</em></span>
                                        }
                                        else
                                        {
                                            <span>@usuario.Hobby</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-info mt-3 mb-0">
                    <i class="fas fa-info-circle"></i>
                    <strong>Total de usuarios registrados:</strong> @Model.Usuarios.Count
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-users fa-5x text-muted mb-3"></i>
                <h4 class="text-muted">No hay usuarios registrados</h4>
                <p class="text-muted">Comience agregando un nuevo usuario al sistema</p>
                <a href="@Url.Action("Form", "Usuario")" class="btn btn-success btn-lg mt-3">
                    <i class="fas fa-plus"></i> Registrar Primer Usuario
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>$(document).ready(function() {
            if ($.fn.DataTable) {
                $('#tablaUsuarios').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                    },
                    "pageLength": 10,
                    "order": [[1, "asc"]] 
                });
            }
        });</script>
}
